@model Data.DTO.Common.PricingDTO

@Html.HiddenFor(c => c.Id)
@Html.HiddenFor(c => c.IsActive)
@Html.HiddenFor(c => c.DateInsert)
@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control input-rounded" />
        </div>
        <div class="col-md-6">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="text" class="form-control input-rounded" />
        </div>
    </div>
     <div class="row">
        <div class="col-md-6">
            <label asp-for="Unit"></label>
            <input asp-for="Unit" type="text" class="form-control input-rounded" />
        </div>
    </div>
     <div class="row">
        <div class="col-md-12">
            <label asp-for="Options"></label>
            <input asp-for="Options" type="text" class="form-control input-rounded" />
        </div>
    </div>
</div>
</div>
