@model Data.DTO.User.AddUserToRoleViewModel
@{
    ViewData["Title"] = "DeleteUserToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="page-wrapper">
    @await Html.PartialAsync("_DashboardTitle")
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-primary">
                    <div class="card-header">
                        <h4 class="m-b-0 text-white">فرم @ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <div class="mt-4">
                            <form asp-controller="@controllerName" asp-action="RemoveUserFromRole" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                @if (!Model.UserRoles.Any())
                                {

                                    <div class="alert alert-danger" role="alert">
                                        هیچ مقامی یافت نشد
                                    </div>
                                }
                                else
                                {
                                    for (int i = 0; i < Model.UserRoles.Count; i++)
                                    {
                                        <div class="form-group">
                                            <input asp-for="@Model.UserRoles[i].IsSelected" />
                                            <label>@Model.UserRoles[i].RoleName</label>

                                            <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                                        </div>
                                    }


                                    <input type="hidden" asp-for="@Model.UserId" />
                                    <button class="btn btn-primary" type="submit">حذف</button>
                                }
                                <a asp-controller="@controllerName" asp-action="Editpage" asp-route-Id="@Model.UserId" class="btn m-btn--pill m-btn--air btn-danger color-white cursor-pointer">بازگشت</a>

                            </form>

                        </div>
                      

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>