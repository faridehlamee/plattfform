@model Data.DTO.Menu.SubMenuDTO

@Html.HiddenFor(c => c.Id)
@Html.HiddenFor(c => c.IsActive)
@Html.HiddenFor(c => c.DateInsert)
@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="MenuId">Main Manu</label>
                <select asp-for="MenuId" asp-items="Model.MenuList" class="form-control input-rounded SearchDropDown">
                    <option></option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="ParentId">Parent</label>
                <select asp-for="ParentId" asp-items="Model.ListSubMenu" class="form-control input-rounded SearchDropDown">
                    <option></option>
                </select>
            </div>
            

        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="SubTitle">Su Menu</label>
                <input asp-for="SubTitle" type="text" class="form-control input-rounded" />
            </div>
            <div class="col-md-6">
                <label asp-for="URL">URL</label>
                <input asp-for="URL" type="text" class="form-control input-rounded" />
            </div>
        </div>
      
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Level">Level</label>
                <input asp-for="Level" type="text" class="form-control input-rounded" />
            </div>
        </div>
    </div>
</div>
