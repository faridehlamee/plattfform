@model Data.DTO.Common.TeamDTO

@Html.HiddenFor(c => c.Id)
@Html.HiddenFor(c => c.IsActive)
@Html.HiddenFor(c => c.DateInsert)
@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" class="form-control input-rounded" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" type="text" class="form-control input-rounded" />
            </div>
            <div class="col-md-6">
                <label asp-for="JobDescription"></label>
                <input asp-for="JobDescription" type="text" class="form-control input-rounded" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Bio"></label>
                <input asp-for="Bio" type="text" class="form-control input-rounded" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label asp-for="LinkedIdUrl"></label>
                <input asp-for="LinkedIdUrl" type="text" class="form-control input-rounded" />
            </div>
        </div>
    </div>
</div>
