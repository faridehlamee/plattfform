                        <div class="media-left meida media-middle">
                            <span><i class="fa fa-usd f-s-40 color-primary"></i></span>
                        </div>
                        <div class="media-body media-text-right ml-3">
                            <h2>@Model.AllPriceReport.SumPrice.ToString("N0")</h2>
                            <p class="m-b-0">@Model.AllPriceReport.Title</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
