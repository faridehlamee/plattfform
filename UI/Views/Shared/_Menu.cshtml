@inject Data.Contracts.Common.IMenuRepository _menuRepository;
@{

    var menudata = await _menuRepository.GetAllActive();

}

<nav id="navbar" class="navbar">

    <ul>

        @foreach (var item in menudata)
        {
            @if (item.CltSubMenu.Count != 0)
            {
                <li class="dropdown">
                    <a href="@item.URL" class="sf-with-ul">  @item.Title</a>
                    <a href="#"><span> @item.Title</span> <i class="bi bi-chevron-down"></i></a>

                    <ul>
                        @foreach (var item2 in item.CltSubMenu)
                        {

                            <li><a href="@item2.URL">@item2.SubTitle</a></li>
                        }



                    </ul>
                </li>
            }
            else
            {
                <li><a class="nav-link scrollto " href="@item.URL"> @item.Title</a></li>
            }


        }
    </ul>

    <i class="bi bi-list mobile-nav-toggle"></i>
</nav><!-- .navbar -->