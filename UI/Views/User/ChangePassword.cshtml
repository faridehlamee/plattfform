@model Data.DTO.User.LoginDTO
@{
    Layout = null;
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Change Password</title>
    <link rel="shortcut icon" href="img/default-icon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="img/default-icon/favicon.ico" type="image/x-icon">
    <link href="~/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/css/flaticon.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
     
</head>

<body>
    <div class="auths">
        <div class="container">
            <div class="auth shadow-box auth-forget" style="min-height: 200px; width: 500px; margin: auto;">
                <div class="row" style="min-height: inherit;">
                    <div class="col-12">
                        <div class="auth-forms">
                            <div class="auth-forms-item">
                                <div class="auth-logo" style="padding: 15px 0;">
                                    <a asp-action="Index" asp-controller="Home">
                                        <img src="~/img/logo.png" class="img-fluid"
                                             alt="آکادمی فورته">
                                    </a>
                                </div>
                                <div class="auth-title mb-3">
                                    <h3>تغییر رمز عبور </h3>
                                    <p class="mt-3">

                                        اطلاعات را به درستی وارد نمایید
                                    </p>
                                </div>
                                <div class="auth-form">
                                    <form asp-action="ChangePassWord" asp-controller="Account" class="form-account" method="post">
                                        <input type="hidden" asp-for="url" />
                                        <div class="form-group">
                                            <div class="input-group w-100">
                                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                                <input name="CurrentPassword" class="form-control" type="password"
                                                       placeholder="رمز عبور قبلی خود را وارد نمایید">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group w-100">
                                                <span class="input-group-text"><i class="bi bi-pass"></i></span>
                                                <input name="NewPassword" class="form-control" type="password"
                                                       placeholder="رمز عبور جدید خود را وارد نمایید">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group w-100">
                                                <span class="input-group-text"><i class="bi bi-pass"></i></span>
                                                <input name="ReNewPassword" class="form-control" type="password"
                                                       placeholder="رمز عبور جدید خود را مجددا وارد نمایید">
                                            </div>
                                        </div>
                                        <div class="justify-content-center hstack gap-2">
                                            <a asp-action="Index" asp-controller="Home">
                                                بازگشت به سایت
                                            </a>
                                            <div class="vr"></div>
                                            <input type="submit" class="btn-login login w-50 waves-effect waves-light" value="ذخیره">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.6.1.min.js" type="text/javascript"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>

</html>