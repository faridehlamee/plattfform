@model Data.DTO.Common.EmailDTO
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <main id="main">
    @await Html.PartialAsync("_Breadcrumbs")
 
        <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Contact</h2>
          <p>We value your feedback and inquiries. Whether you have a question, a suggestion, or simply want to reach out to us, we're here to assist you. </p>
        </div>

        <div class="row">

          <div class="col-lg-5 d-flex align-items-stretch">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>3050 Dayanee Springs Blv Coquitlam</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>info@kiatechsoftware.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+1 604 781 4912</p>
              </div>

            </div>

          </div>

          <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form asp-action="SendEmail" asp-controller="Home" method="post" role="form" class="form">
              <div class="row">
                <div class="form-group col-md-6">
                  <label  asp-for="Fullname">Your Name</label>
                  <input type="text"  asp-for="Fullname" class="form-control"  required>
                </div>
                <div class="form-group col-md-6">
                  <label asp-for="EmailAddress">Your Email</label>
                  <input type="email" class="form-control"  asp-for="EmailAddress" required>
                </div>
              </div>
              <div class="form-group">
                <label asp-for="Subject">Subject</label>
                <input type="text" class="form-control" asp-for="Subject" required>
              </div>
              <div class="form-group">
                <label for="name">Message</label>
                <textarea class="form-control"asp-for="message" rows="10" required></textarea>
              </div>
 
              <div class="text-center"><button type="submit">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->