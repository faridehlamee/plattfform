                        culpa qui officia deserunt mollit anim id est laborum
                    </p>*@
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container">

            <div class="row">

                <div class="col-lg-4" data-aos="fade-up">
                    <div class="box">
                        <span>01</span>
                        <h4>RESIDENTIAL & COMMERCIAL INSPECTIONS</h4>
                        <p>We inspect residential and commercial buildings of all types and sizes. Choose a company with thousands of successful inspections</p>
                    </div>
                </div>

                <div class="col-lg-4 mt-4 mt-lg-0" data-aos="fade-up" data-aos-delay="150">
                    <div class="box">
                        <span>02</span>
                        <h4>PROPERTY DEVELOPMENT</h4>
                        <p>We are proud to invest on development of properties and/or facilitate our clients for their investments in Metro Vancouver on residential development projects.</p>
                    </div>
                </div>

                <div class="col-lg-4 mt-4 mt-lg-0" data-aos="fade-up" data-aos-delay="300">
                    <div class="box">
                        <span>03</span>
                        <h4>REINFORCED SOIL STRUCTURES</h4>
                        <p>Consulting and supervision for soil reinforcement and stabilizations projects by using new methods like MSE & RSS and products like geosynthetic and/or steel strips with modular facing systems. </p>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Why Us Section -->
    <!-- ======= Blog Section ======= -->
    <section id="blog-posts" class="blog-posts">
        <div class="container">

            <div class="section-title">
                <span>Articles</span>
                <h2>Articles</h2> 
            </div>

            <div class="row">

                @if (Model.LastArticles.Count > 0)
                {
  
                    <div class="row">
                         
                            @foreach (var item in Model.LastArticles)
                            {
                                <article class="entry entry-display">
                                    <figure class="entry-media">
                                        <a href="single.html">
                                            <img src="~/img/portfolio/portfolio-1.jpg" alt="image desc">
                                        </a>
                                    </figure><!-- End .entry-media -->

                            <div class="entry-body pb-4 text-center">
                                        <div class="entry-meta">
                                            <a href="#">@item.DateInsert</a>
                                        </div><!-- End .entry-meta -->

                                <h3 class="entry-title">
                                            <a href="single.html">@item.Title.</a>
                                        </h3><!-- End .entry-title -->

                                <div class="entry-content">
                                            <p>@item.Sumary    TSSDFGSDFGDSFGDF</p>
                                            <a href="single.html" class="read-more">Read More</a>
                                        </div><!-- End .entry-content -->
                            </div><!-- End .entry-body -->
                        </article>

                                <!-- End .entry -->
                            }


                        </div><!-- End .tab-content -->
                    <div class="more-container text-center mb-0 mt-3">
                            <a asp-action="Index" asp-controller="Blog" asp-route-blogCategoryId="@Model.LastArticles.First().BlogCategoryId" class="more-btn"><span>View more articles</span><i class="icon-long-arrow-right"></i></a>
                        </div><!-- End .more-container -->
       

                    <!-- End .container -->
                }

            </div>

        </div>
    </section><!-- End Services Section -->

