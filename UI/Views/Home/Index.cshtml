@model Services.ViewModel.IndexViewModel

@{
    ViewData["Title"] = "Royal Canyon Consulting";
}
<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    @foreach (var item in Model.Sliders)
    {
        <div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
            <h1>@item.Title</h1>
            <h2>@item.Description</h2>
            <a href="#" class="btn-get-started scrollto">Get Started</a>
        </div>
    }

</section><!-- End Hero -->
<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left">
                    <img src="~/img/about.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content" data-aos="fade-right">
                    <h3>WELCOME TO ROYAL CANYON CONSULTING</h3>
                    <p class="fst-italic">
                        Royal Canyon Consulting has been established in 2014 as a corporation. At the very beginning we started as a construction company. After delivering many successful projects, we have expanded the company and added to our specialties including property development and various types of residential and commercial buildings inspections.
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> Soil reinforcement and stabilization projects in different phases is our most recent achievement.</li>
                        <li><i class="bi bi-check-circle"></i> Our staff and sub-contractors are able to deliver you the best result and satisfy all your needs in any of these areas.</li>
